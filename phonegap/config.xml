<?xml version='1.0' encoding='utf-8'?>
<widget id="nl.dompseler.curp" version="0.0.2" android-versionCode="7" ios-CFBundleVersion="7" xmlns="http://www.w3.org/ns/widgets">

    <!-- App Info -->
    <name>Curp</name>
    <description>
        Curriculum planner
    </description>
    <author email="herman@dompseler.nl" href="http://uu.nl/">
        UU
    </author>
    
    <!-- starting page -->
	<content src="index.html" />

    <!-- external access -->
    <!-- <access origin="http://sciomino.com" subdomains="true" />
    <access origin="http://sciomino.nl" subdomains="true" /> -->
    <access origin="*" subdomains="true" />
    
    <!-- debug off -->
    <!-- <feature name="debug-server" required="false" /> -->

    <!-- App preferences -->
    <!-- <preference name="orientation" value="landscape" />  -->
    <!-- fix ui --> 
    <preference name="DisallowOverscroll" value="true" /> 
    <!-- splashscreen options --> 
    <preference name="AutoHideSplashScreen" value="false" /> 
    <preference name="ShowSplashScreenSpinner" value="false" /> 
    <!-- Adroid specific -->
    <!-- target an android sdk version for hardware acceleration -->
    <preference name="android-minSdkVersion" value="14"/> //android 4.0
	<preference name="android-targetSdkVersion" value="19"/> //android 4.4
	<!-- iOS specific -->
	<preference name="target-device" value="universal" />
	<preference name="deployment-target" value="6.0" />
	<!-- no funky stuff with the statusbar -->
	<preference name="StatusBarOverlaysWebView" value="false" />

    <!-- App icons -->
    <platform name="android">
		<icon src="www/gfx/curp/icons/36.png" density="ldpi" />
		<icon src="www/gfx/curp/icons/48.png" density="mdpi" />
		<icon src="www/gfx/curp/icons/72.png" density="hdpi" />
		<icon src="www/gfx/curp/icons/96.png" density="xhdpi" />
   </platform>
    <platform name="ios"> 
		<!-- iPad -->
		<icon src="www/gfx/curp/icons/Icon-76.png" width="76" height="76" />
		<icon src="www/gfx/curp/icons/Icon-76@2x.png" width="152" height="152" />
		<!-- Settings Icon -->
		<icon src="www/gfx/curp/icons/Icon-Small.png" width="29" height="29" />
		<icon src="www/gfx/curp/icons/Icon-Small@2x.png" width="58" height="58" />
		<!-- Spotlight Icon -->
		<icon src="www/gfx/curp/icons/Icon-Small-40.png" width="40" height="40" />
		<icon src="www/gfx/curp/icons/Icon-Small-40@2x.png" width="80" height="80" />
		<!-- < iOS 7.0 -->
		<icon src="www/gfx/curp/icons/Icon-72.png" width="72" height="72" />
		<icon src="www/gfx/curp/icons/Icon-72@2x.png" width="144" height="144" />
		<icon src="www/gfx/curp/icons/Icon-Small-50.png" width="50" height="50" />
		<icon src="www/gfx/curp/icons/Icon-Small-50@2x.png" width="100" height="100" />
	</platform>

    <!-- Splash screens -->
	<platform name="android">
		<splash src="www/gfx/curp/splash/ldpi.png" density="ldpi"/>
		<splash src="www/gfx/curp/splash/mdpi.png" density="mdpi"/>
		<splash src="www/gfx/curp/splash/hdpi.png" density="hdpi"/>
		<splash src="www/gfx/curp/splash/xhdpi.png" density="xhdpi"/>
	</platform>
	<platform name="ios">
		<!-- iPad -->
		<splash src="www/gfx/curp/splash/Default-Portrait.png" width="768" height="1024"/>
		<splash src="www/gfx/curp/splash/Default-Landscape.png" width="1024" height="768"/>
		<!-- Retina iPad -->
		<splash src="www/gfx/curp/splash/Default-Portrait@2xpng" width="1536" height="2048"/>
		<splash src="www/gfx/curp/splash/Default-Landscape@2x.png" width="2048" height="1536"/>
	</platform>

    <!-- plugins
    dialog: cordova plugin add org.apache.cordova.dialogs
    splash: cordova plugin add org.apache.cordova.splashscreen 
    browser: cordova plugin add org.apache.cordova.inappbrowser 
    device: (NOT YET NEEDED)
    network: cordova plugin add org.apache.cordova.network-information 
    globalization: (NOT YET NEEDED)
    camera: cordova plugin add org.apache.cordova.camera
    statusbar: cordova plugin add org.apache.cordova.statusbar

    social sharing: cordova plugin add https://github.com/EddyVerbruggen/SocialSharing-PhoneGap-Plugin.git
    custom url: cordova plugin add https://github.com/EddyVerbruggen/LaunchMyApp-PhoneGap-Plugin.git \-\-variable URL_SCHEME=timebox
    toast: cordova plugin add nl.x-services.plugins.toast
    keyboard: cordova plugin add com.ionic.keyboard
    -->
 
</widget>
